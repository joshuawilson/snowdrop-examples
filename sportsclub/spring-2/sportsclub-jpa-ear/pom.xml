    <build>
        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                  <filesets>
                    <fileset>
                      <directory>src/main/application/META-INF</directory>
                      <includes>
                        <include>**/application.xml</include>
                      </includes>
                    </fileset>
                  </filesets>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <displayName>Sports Club Sample Application</displayName>
                    <generateApplicationXml>true</generateApplicationXml>
                    <defaultLibBundleDir>/lib/</defaultLibBundleDir>
                    <workDirectory>${project.build.directory}/${project.build.finalName}-exploded.ear</workDirectory>
                    <modules>
                       <jarModule>
                            <groupId>org.jboss.snowdrop.samples.sportsclub.spring-2</groupId>
                            <artifactId>sportsclub-domain</artifactId>
                            <bundleFileName>sportsclub-domain.jar</bundleFileName>
                        </jarModule>
                        <ejbModule>
                            <groupId>org.jboss.snowdrop.samples.sportsclub.spring-2</groupId>
                            <artifactId>sportsclub-subscriptions-ejb</artifactId>
                            <bundleFileName>sportsclub-subscriptions-ejb.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>org.jboss.snowdrop.samples.sportsclub.spring-2</groupId>
                            <artifactId>sportsclub-invoicing-ejb</artifactId>
                            <bundleFileName>sportsclub-invoicing-ejb.jar</bundleFileName>
                        </ejbModule>
                        <webModule>
                            <groupId>org.jboss.snowdrop.samples.sportsclub.spring-2</groupId>
                            <artifactId>sportsclub-subscriptions-web</artifactId>
                            <contextRoot>/sportsclub/subscriptions</contextRoot>
                            <bundleFileName>sportsclub-subscriptions-web.war</bundleFileName>
                        </webModule>
                        <webModule>
                            <groupId>org.jboss.snowdrop.samples.sportsclub.spring-2</groupId>
                            <artifactId>sportsclub-reservations-web</artifactId>
                            <contextRoot>/sportsclub/reservations</contextRoot>
                            <bundleFileName>sportsclub-reservations-web.war</bundleFileName>
                        </webModule>
                        <!-- Disable until a fix is available for
                                     https://jira.springsource.org/browse/SWF-1467 -->
